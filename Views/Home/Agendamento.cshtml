@{
    ViewData["Title"] = "Pré-Agendamento";
}
<h1>@ViewData["Title"]</h1>

@model at02.Models.Agendamento
<form method="POST">
    <p>
       <label asp-for="nome">Nome:</label>
       <input asp-for="nome" />
   </p>
   <p>
       <label asp-for="telefone">Telefone:</label>
       <input asp-for="telefone" />
   </p>
   <p>
       <label asp-for="data">Data:</label>
       <input type="date" asp-for="data" />
   </p>
   <p>
       <label asp-for="animal">Animal:</label>
       <select asp-for="animal">
           <option value="Cachorro">Cachorro</option>
           <option value="Gato">Gato</option>
           <option value="Outros Domésticos">Outros Animais Domésticos</option>
           <option value="Outros Silvestres">Animal Silvestre</option>
       </select>
   </p>
   <p>
       <label asp-for="necessidade">Necessidade:</label>
       <textarea asp-for="necessidade"></textarea>
   </p>
   <input type="submit" value="Enviar" />

</form>
